<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/controlle_id"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/countroller_background"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">


        <ImageButton
            android:id="@+id/loopOneByOneBTN"

            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="left"
            android:layout_margin="4dp"
            android:background="@drawable/circular_changed_color_background"
            android:src="@drawable/ic_loop_one_by_one_off_24"></ImageButton>

        <ImageButton
            android:id="@+id/loopIsSelfBTN"
            style="@style/ThemeOverlay.AppCompat"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_margin="4dp"
            android:background="@drawable/circular_changed_color_background"
            android:src="@drawable/ic_loop_it_self_off_24"></ImageButton>


        <ImageButton
            android:id="@+id/loopRandomBTN"
            style="@style/ThemeOverlay.AppCompat"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="right"
            android:layout_margin="4dp"
            android:background="@drawable/circular_changed_color_background"
            android:src="@drawable/ic_random_loop_off_24"></ImageButton>

    </FrameLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#90151515"
        android:orientation="horizontal"

        android:padding="10dp">

        <TextView
            android:id="@+id/currentProgress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:textColor="#F18A6A"></TextView>

        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:progress="80"
            android:progressBackgroundTint="#FF9800"
            android:progressTint="#FF5722"
            android:thumbTint="#CF4013" />

        <TextView
            android:id="@+id/songLength"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="13:03"
            android:textColor="#F18A6A"></TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#90151515"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="10dp">

            <ImageButton
                android:id="@+id/prevBTN"
                style="@style/ThemeOverlay.AppCompat"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="4dp"

                android:background="@drawable/circular_changed_color_background"
                android:src="@drawable/ic_round_previous_40"></ImageButton>

            <ImageButton
                android:id="@+id/playPauseBTN"
                style="@style/ThemeOverlay.AppCompat"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="4dp"
                android:background="@drawable/circular_changed_color_background"
                android:src="@drawable/ic_round_play_40"></ImageButton>

            <ImageButton
                android:id="@+id/stopBTN"
                style="@style/ThemeOverlay.AppCompat"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="4dp"

                android:background="@drawable/circular_changed_color_background"
                android:src="@drawable/ic_round_stop_40"></ImageButton>

            <ImageButton
                android:id="@+id/nextBTN"
                style="@style/ThemeOverlay.AppCompat"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="4dp"
                android:background="@drawable/circular_changed_color_background"
                android:src="@drawable/ic_round_next_40"></ImageButton>


        </LinearLayout>
    </LinearLayout>

</LinearLayout>

