<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient android:angle="270" android:endColor="#7A2207" android:startColor="#E6EAEF"></gradient>
            <corners android:radius="20dp"></corners>
            <stroke android:width="1dp" android:color="#123"></stroke>
        </shape>

    </item>

    <item android:state_enabled="true">
        <shape android:shape="rectangle">
            <corners android:radius="20dp"></corners>
            <gradient android:angle="270"
                android:endColor="#070707"
                android:startColor="#3D3E3E"></gradient>

            <stroke android:width="0.3dp" android:color="#FF5722"></stroke>
        </shape>

    </item>

</selector>