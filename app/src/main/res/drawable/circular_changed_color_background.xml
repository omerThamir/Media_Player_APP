<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="oval">

            <gradient android:startColor="#E1DBE4"
                android:centerColor="#F4A94A"
                android:angle="90"
                android:endColor="#3C2C33"></gradient>

            <stroke android:color="#09243A" android:width="5dp"/>
            <!-- Set the same value for both width and height to get a circular shape -->
            <size android:width="70dp" android:height="70dp"/>
        </shape>
    </item>


    <item android:state_enabled="true">

        <shape android:shape="oval">

            <gradient android:startColor="#E1DBE4"
                android:centerColor="#F49621"
                android:angle="45"
                android:endColor="#EA0C74"></gradient>

            <stroke android:color="#09243A" android:width="2dp"/>
            <!-- Set the same value for both width and height to get a circular shape -->
            <size android:width="70dp" android:height="70dp"/>
        </shape>
    </item>


</selector>